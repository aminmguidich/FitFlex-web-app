{% extends "frontend/base.html.twig" %}

{% block title %}
	New Comment
{% endblock %}
{% block headerCard %}
	<h3 class="text-center font-weight-light my-4">New Comment</h3>
{% endblock %}
{% block container %}

    {# Display Flash Messages #}
    {% for flash_message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}

    {{ include('comment/_form.html.twig') }}

    <a href="{{ path('app_comment_index') }}" class="btn btn-primary">Back to list</a>
    
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Edit Activity{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Activity</h1>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}

        <div class="form-group">
            {{ form_label(form.idcategorie, 'Category') }}
            {{ form_widget(form.idcategorie, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.dateDeb, 'Start Date') }}
            {{ form_widget(form.dateDeb, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.dateFin, 'End Date') }}
            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.salle, 'Room') }}
            {{ form_widget(form.salle, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.titre, 'Title') }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.idUser, 'User') }}
            {{ form_widget(form.idUser, {'attr': {'class': 'form-control'}, 'choice_label': 'nomPrenom'}) }}
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <a href="{{ path('app_activites_index') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update
            </button>
        </div>



        {{ form_end(form) }}


    </div>
{% endblock %}

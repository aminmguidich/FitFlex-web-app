{% extends 'base.html.twig' %}

{% block title %}Activites{% endblock %}

{% block body %}
    <h1>Activites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ activite.code }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ activite.categorie }}</td>
            </tr>
            <tr>
                <th>DateDeb</th>
                <td>{{ activite.dateDeb ? activite.dateDeb|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ activite.dateFin ? activite.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
            <tr>
                <th>Salle</th>
                <td>{{ activite.salle }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ activite.titre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activites_index') }}">back to list</a>

    <a href="{{ path('app_activites_edit', {'code': activite.code}) }}">edit</a>

    {{ include('activites/_delete_form.html.twig') }}
{% endblock %}

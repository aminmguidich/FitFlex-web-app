{% extends 'base.html.twig' %}

{% block title %}Activities{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Activities</h1>
        <form method="get" action="{{ path('app_activites_search') }}" class="mb-4">
            <div class="row">
                <div class="col-md-3">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" class="form-control" value="{{ app.request.query.get('title') }}">
                </div>

                <div class="col-md-3">
                    <label for="salle">Salle:</label>
                    <input type="text" id="salle" name="salle" class="form-control" value="{{ app.request.query.get('salle') }}">
                </div>

                <div class="col-md-3">
                    <label for="dateDeb">Date:</label>
                    <input type="date" id="dateDeb" name="dateDeb" class="form-control" value="{{ app.request.query.get('dateDeb') }}">
                </div>

                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary mt-4">Search</button>
                </div>
            </div>
        </form>

        <table class="table">
            <!-- Table Header -->
            <thead>
            <tr>
                <th>Code</th>
                <th>Categorie</th>
                <th>DateDeb</th>
                <th>DateFin</th>
                <th>Description</th>
                <th>Salle</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
            </thead>

            <!-- Table Body -->
            <tbody>
            {% for activite in activites %}
                <tr>
                    <td>{{ activite.code }}</td>
                    <td>{{ activite.idcategorie }}</td>
                    <td>{{ activite.dateDeb ? activite.dateDeb|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ activite.dateFin ? activite.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ activite.description }}</td>
                    <td>{{ activite.salle }}</td>
                    <td>{{ activite.titre }}</td>
                    <td>
                        <a href="{{ path('app_activites_show', {'code': activite.code}) }}" class="btn btn-primary btn-sm">Show</a>
                        <a href="{{ path('app_activites_edit', {'code': activite.code}) }}" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Create New Button -->
    <div class="text-center">
        <a href="{{ path('app_activites_new') }}" class="btn btn-primary">Create New</a>
    </div>
{% endblock %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="container">
    <h1 class="text-center mb-4">Modifier la Commande</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        {{ form_label(form.date) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_errors(form.date) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.adresse) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_errors(form.adresse) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_errors(form.type) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.produits.vars.id }}">Produits :</label>
                        {% for produit in form.produits %}
                            <div class="form-check">
                                {{ form_widget(produit, {'attr': {'class': 'form-check-input'}}) }}
                                <label class="form-check-label" for="{{ produit.vars.id }}">
                                    {{ produit.vars.label }}
                                    {% if produit.vars.attr['data-image'] is defined %}
                                        {# Utilisez asset() pour générer le chemin absolu vers l'image #}
                                        <img src="{{ asset('uploads/images/' ~ produit.vars.attr['data-image']) }}" alt="Image du Produit" style="max-width: 50px; max-height: 50px;">
                                    {% endif %}
                                </label>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.iduser) }}
                        {{ form_widget(form.iduser, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_errors(form.iduser) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}

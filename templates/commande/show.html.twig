{% extends "base_front_ayari.html.twig" %}

{% block title %}Commande{% endblock %}
{% block body %}
    <div style="text-align: center; padding: 20px; background-color: #f2f2f2;">
        <h1 style="color: #336699;">Commande</h1>

        <table class="table" style="width: 50%; margin: 0 auto;">
            <tbody>
                <tr>
                    <th>Date</th>
                    <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ commande.adresse }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ commande.type }}</td>
                </tr>
            </tbody>
        </table>

        <div style="margin-top: 20px;">
            <a href="{{ path('app_commande_index') }}" style="color: #336699;">Back to List</a>
            <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" style="color: #336699; margin-left: 20px;">Edit</a>
            <a href="{{ path('app_pdf', {'id': commande.id}) }}" style="color: #336699; margin-left: 20px;">PDF</a>
        </div>

        {{ include('commande/_delete_form.html.twig') }}
    </div>
{% endblock %}

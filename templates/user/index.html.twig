{% extends 'base_back_hssan.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
              
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mot de passe</th>
                <th>Role</th>
                <th>Email</th>
                <th>Img</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
              
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.mdp }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.img }}</td>
                <td>{{ user.age }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                   <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                          <button class="btn btn-danger" ">Delete</button>utton>
                 </form>
                        
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}

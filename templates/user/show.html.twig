{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
           <tr>
                <th>Image</th>
             <td> <img src="{{ asset('/BackOffice/images/' ~ users.img) }}" height="100px" width="100px"></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ users.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ users.prenom }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ users.mdp }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ users.role }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ users.email }}</td>
            </tr>
           
            <tr>
                <th>Age</th>

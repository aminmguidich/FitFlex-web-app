            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="btn btn-secondary" style="width:15% !important;margin-left:50%;margin-top:20px">Back to List</a>

        <a href="{{ path('app_user_edit',{'id': users.id}) }}" class="btn btn-success" style="width:15% !important;margin-left:0%;margin-top:-30px">Edit</a>


    {{ include('user/_delete_form.html.twig') }}

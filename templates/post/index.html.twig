{%extends "base_front_asma.html.twig"%}
<!DOCTYPE html>

<title>Post index</title>

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idpost</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.idpost }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.image }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'idpost': post.idpost}) }}">show</a>
                    <a href="{{ path('app_post_edit', {'idpost': post.idpost}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}

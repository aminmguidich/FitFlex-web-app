{% extends "frontend/base.html.twig" %}

{% block title %}
	Offre
{% endblock %}
{% block headerCard %}
	<h3 class="text-center font-weight-light my-4">Offre</h3>
{% endblock %}
{% block container %}
	<section class="section" id="our-classes">
		<div class="container">
			<div class="row" id="tabs">
				<div class="col-lg-4">
					<ul>
						{% for offer in offers %}
							<li>
								<a href='#tabs-{{ loop.index }}'><img src="{{asset('FrontOffice/images/tabs-first-icon.png')}}" alt="">{{ offer.titleoffer }}</a>
							</li>
						{% endfor %}
						<div class="main-rounded-button">
							<a href="#">View All Schedules</a>
						</div>
					</ul>
				</div>

				<div class="col-lg-8">
					<section class='tabs-content'>
						{% for offer in offers %}
							<article id='tabs-{{ loop.index }}'>
								<img class="offer-image" style="max-width: 100%; height: 100px; width: 100%;" src="{{ vich_uploader_asset(offer, 'imageFile') }}" alt="">
								<h4 style="color: #1b95b2">{{ offer.titleoffer }}</h4>
								<p>
									<strong>Description:</strong>
									<span style="margin-left: 20px;">{{ offer.descriptionoffer }}</p>
								</p>
								<p>
									<strong>Date Debut Offer:</strong>
									<span style="margin-left: 20px;">{{ offer.datedeboffer ? offer.datedeboffer|date('Y-m-d') : '' }}</p>
								</p>
								<p>
									<strong>Date Fin Offer :</strong>
									<span style="margin-left: 20px;">{{ offer.datefinoffer ? offer.datefinoffer|date('Y-m-d') : '' }}</p>
								</p>
								<p>
									<strong>Prix:</strong>
									<span style="margin-left: 20px;">{{ offer.prix }}</p>
									<div class="main-button">
										<a style="background-color: #1b95b2; color: white;" href="{{ path('new_reservation_offer', {'id': offer.idoffer}) }}">Reserver</a>
									</div>
								</p>
							</article>
						{% endfor %}
					</section>
				</div>
			</div>
		</div>
	</section>

{% endblock %}


{% block Details %}

	{% if app.request.attributes.get('_route') != 'app_reservation_offer_index' %}{% endif %}
{% endblock %}

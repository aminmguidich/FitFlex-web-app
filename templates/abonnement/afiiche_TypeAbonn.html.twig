{% extends 'base_Front_chayma.html.twig' %}


{% block title %}Type Abonnement{% endblock %}

{% block abonn %}

    <section class="section" id="features">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="section-heading">
                        <h2>Choisir <em>Abonnement</em></h2>
                        <img src="{{asset('FrontOffice/images/line-dec.png')}}" alt="waves">
                        <div class="d-flex justify-content-center"></div>
                    </div>
                </div>
            </div>

            <div class="row">
                {% for i in type_abonns %}
                    <div class="col-lg-6">
                        <ul class="features-items">
                            <li class="feature-item d-flex align-items-center">
                                <div class="left-icon">
                                    <img src="{{asset('FrontOffice/images/features-first-icon.png')}}" alt="First One">
                                </div>
                                <div class="right-content">
                                    <h4 style="color: #1b95b2">{{i.type}}</h4>
                                    <p>{{i.description}}</p>
                                      <td> <form action = "{{ path('app_abonnement_new', {'id': i.id} ) }}"> <button style="background-color: #1b95b2; color: white;">s'abonner</button></form></td> 
                                </div>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

                   
    
    
    


                    




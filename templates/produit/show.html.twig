
{% extends 'backend/base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Produit</h1>

        <table class="table table-bordered mx-auto">
            <tbody>
              
                <tr>
                    <th>Titre</th>
                    <td>{{ produit.titre }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        {% if produit.image %}
                            <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.titre }}" style="max-width: 200px; max-height: 200px;">
                        {% else %}
                            No Image
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ produit.date ? produit.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ produit.description }}</td>
                </tr>
                <tr>
                    <th>Categorie</th>
                    <td>{{ produit.categorie }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_produit_index') }}" class="btn btn-primary d-block mx-auto mt-3">Back to list</a>

        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning d-block mx-auto mt-3">Edit</a>

        {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}

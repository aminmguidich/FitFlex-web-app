{% extends "base_back_ayari.html.twig" %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Produit index</h1>

        <table class="table table-bordered mx-auto">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Idadmin</th>
                    <th>Titre</th>
                    <th>Image</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Categorie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td>{{ produit.idadmin }}</td>
                        <td>{{ produit.titre }}</td>
                        <td>{{ produit.image }}</td>
                        <td>{{ produit.date ? produit.date|date('Y-m-d') : '' }}</td>
                        <td>{{ produit.description }}</td>
                        <td>{{ produit.categorie }}</td>
                        <td>
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_produit_new') }}" class="btn btn-primary d-block mx-auto mt-3">Create new</a>
    </div>
{% endblock %}
